<div class="d-flex justify-content-around pt-3">
  <div class="alert alert-success w-25 d-flex flex-column" role="alert">
    <p class="p-0 m-0">
      <b>Bienvenido</b> {{userData.firstname}} {{userData.lastname}}
    </p>
    <p class="p-0 m-0"><b>Email:</b> {{userData.email}}</p>
    <p class="p-0 m-0"><b>Rol:</b> {{userData.role}}</p>
  </div>
  <h1 class="text-white text-center p-3">PRODUCTOS</h1>
  <div class="w-25 d-flex justify-content-end align-items-center" role="alert">
    <a href="/logout">
      <button class="btn btn-danger">Logout</button>
    </a>
  </div>
</div>

<nav aria-label="Page navigation example" class="w-100 d-flex flex-column justify-content-center align-items-center">
    <ul class="pagination">
        {{#if hasPrevPage}}
        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{prevLink}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">{{prevPage}}</span>
            </a>
            
        </li>
        {{/if}}
        <li class="page-item"><a class="page-link bg-dark text-info" href="">{{page}} - {{totalPages}}</a></li>
        {{#if hasNextPage}}

        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{nextLink}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">{{nextPage}}</span>
            </a>
        </li>
        {{/if}}
    </ul>
</nav>

<br>

<div class="cards_container d-flex flex-wrap justify-content-center gap-3">
    {{#each payload}}
    <div class="card bg-dark text-white" style="width: 18rem;">
        <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
        <div class="card-body h-50">
            <h5 class="card-title h3">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text h4">${{this.price}}</p>
            <button class="btn btn-primary">Agregar al carrito</button>
        </div>
    </div>
    {{/each}}
</div>

<br>
<nav aria-label="Page navigation example" class="w-100 d-flex flex-column justify-content-center align-items-center">
    <ul class="pagination">
        {{#if hasPrevPage}}
        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{prevLink}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">{{prevPage}}</span>
            </a>
            
        </li>
        {{/if}}
        <li class="page-item"><a class="page-link bg-dark text-info" href="">{{page}} - {{totalPages}}</a></li>
        {{#if hasNextPage}}

        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{nextLink}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">{{nextPage}}</span>
            </a>
        </li>
        {{/if}}
    </ul>
</nav>

